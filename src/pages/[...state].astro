---
import Layout from "@/layouts/Layout.astro";
import { GigList } from "@/components/gig";
import { DEFAULT_STATE } from "@/app.config.mjs";
import { localizePath } from "astro-i18next";

export type Props = {
  states: any[];
};

type State = {
  code: string;
  name: string;
  path: string;
  gigs: any[];
};

export async function getStaticPaths() {
  const states: State[] = (await Astro.glob("../data/gigs/*.json")).map(
    (state) =>
      ({
        ...state,
        path: localizePath(state.code),
      } as State)
  );

  return [
    {
      params: { state: undefined },
      props: { states },
    },
    ...states.map(({ code }) => ({
      params: { state: code },
      props: { states },
    })),
  ];
}

const { states } = Astro.props;
const stateCode = (Astro.params.state as string) ?? DEFAULT_STATE;
const selectedState = states.find((state) => state.code === stateCode);
---

<Layout
  title={selectedState.name}
  states={states}
  selectedState={selectedState}
>
  <GigList client:idle state={selectedState} />
</Layout>
