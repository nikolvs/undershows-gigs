---
import { Debug } from "astro/components";
import { t } from "i18next";
import {
  SUPPORTED_LANGUAGES,
  DEFAULT_LOCALE,
  DEFAULT_STATE,
} from "@/app.config.mjs";
import Layout from "@/layouts/Layout.astro";

export type Props = {
  name: string;
  gigs: any[];
};

type StaticPath = {
  props: Props;
  params: {
    state?: string;
    lang: string;
  };
};

export async function getStaticPaths() {
  const states = await Astro.glob("../../data/gigs/*.json");
  const defaultState = states.find((state) => state.code === DEFAULT_STATE);

  return SUPPORTED_LANGUAGES.reduce((paths: StaticPath[], lang: string) => {
    // Don't add default locale paths.
    if (lang === DEFAULT_LOCALE) {
      return paths;
    }

    paths.push({
      params: {
        state: undefined,
        lang: lang.toLocaleLowerCase(),
      },
      props: defaultState as Props,
    });

    paths.push(
      ...states.map(({ code, name, gigs }) => ({
        params: {
          lang,
          state: code,
        },
        props: { name, gigs },
      }))
    );

    return paths;
  }, [] as StaticPath[]);
}

const { name, gigs } = Astro.props;
---

<Layout title={name}>
  {t("states")} - {name}
  <Debug {gigs} />
</Layout>
