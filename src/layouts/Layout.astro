---
import i18next from "i18next";
import { changeLanguage } from "i18next";
import { HeadHrefLangs } from "astro-i18next/components";
import { SITE_TITLE, DEFAULT_LOCALE } from "@/app.config.mjs";
import { AppNavbar } from "@/components/app";
import { AppFooter } from "../components/app";

changeLanguage((Astro.params.lang as string) ?? DEFAULT_LOCALE);

export type Props = {
  title?: string;
};

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang={i18next.language} data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{SITE_TITLE} {title ? `| ${title}` : ""}</title>
    <HeadHrefLangs />
  </head>
  <body>
    <div class="flex flex-col h-screen justify-between">
      <AppNavbar />
      <main class="w-full px-6 mb-auto">
        <slot />
      </main>
      <AppFooter />
    </div>
  </body>
</html>
