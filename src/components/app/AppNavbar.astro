---
import { LanguageSelector } from "astro-i18next/components";
import { Link } from "@/components/core";
import { StateSelector } from "@/components/state";
import { SITE_TITLE } from "@/app.config.mjs";

export type Props = {
  lang: string;
  states: any[];
  selectedState: any;
};

const { lang, states, selectedState } = Astro.props;
---

<div class="navbar bg-gray-900">
  <div class="flex-none">
    <Link to="/" class="btn btn-ghost normal-case text-xl text-white">
      {SITE_TITLE}
    </Link>
  </div>
  <div class="flex-grow">
    <div class="w-1/3 m-auto">
      <StateSelector
        client:idle
        lang={lang}
        states={states}
        selectedState={selectedState}
      />
    </div>
  </div>
  <div class="flex-none">
    <LanguageSelector class="select select-ghost select-sm text-lg" />
  </div>
</div>
